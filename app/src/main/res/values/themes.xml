<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NasaApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="colorError">@color/error</item>
        <item name="textInputStyle">@style/SearchLayoutStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

    </style>

    <style name="Theme.NasaAppDeepPurple" parent="Base.Theme.NasaApp" />

    <style name="Theme.NasaAppRed" parent="Base.Theme.NasaApp" >
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryContainer">@color/primary_container_red</item>
        <item name="colorOnPrimaryContainer">@android:color/white</item>
        <item name="colorSecondary">@color/secondary_grey</item>
        <item name="colorSecondaryContainer">@color/secondary_container_grey</item>
        <item name="colorOnSecondaryContainer">@android:color/white</item>
        <item name="colorSurface">@color/surface_red</item>
        <item name="colorOnSurfaceVariant">@android:color/black</item>
    </style>

    <style name="Theme.NasaAppBlue" parent="Base.Theme.NasaApp" >
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryContainer">@color/primary_container_blue</item>
        <item name="colorOnPrimaryContainer">@android:color/white</item>
        <item name="colorSecondary">@color/secondary_blue_grey</item>
        <item name="colorSecondaryContainer">@color/secondary_container_blue_grey</item>
        <item name="colorOnSecondaryContainer">@android:color/white</item>
        <item name="colorSurface">@color/surface_blue</item>
        <item name="colorOnSurfaceVariant">@android:color/black</item>
    </style>

    <style name="Theme.NasaAppOrange" parent="Base.Theme.NasaApp" >
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorPrimaryContainer">@color/primary_container_orange</item>
        <item name="colorOnPrimaryContainer">@android:color/white</item>
        <item name="colorSecondary">@color/secondary_brown</item>
        <item name="colorSecondaryContainer">@color/secondary_container_brown</item>
        <item name="colorOnSecondaryContainer">@android:color/white</item>
        <item name="colorSurface">@color/surface_orange</item>
        <item name="colorOnSurfaceVariant">@android:color/black</item>
    </style>

</resources>