<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NasaApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorOnSurfaceVariant">@android:color/black</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnPrimaryContainer">?attr/colorOnContainerNasaApp</item>
        <item name="colorOnSecondaryContainer">?attr/colorOnContainerNasaApp</item>

        <item name="chipStyle">@style/ChipStyle</item>
        <item name="textInputStyle">@style/SearchLayoutStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="circularProgressIndicatorStyle">@style/ProgressBarStyle</item>
        <item name="materialCardViewStyle">@style/CardViewStyle</item>
        <item name="materialButtonOutlinedStyle">@style/ButtonStyle</item>
        <item name="bottomNavigationStyle">@style/NavigationViewStyle</item>

        <item name="shapeAppearanceCornerLarge">@style/ButtonFabShapeAppearance</item>
        <item name="shapeAppearanceCornerSmall">@style/ChipShapeAppearance</item>
        <item name="shapeAppearanceCornerExtraSmall">@style/SearchLayoutShapeAppearance</item>
        <item name="shapeAppearanceCornerExtraLarge">@style/SheetBottomShapeAppearance</item>
        <item name="shapeAppearanceCornerMedium">@style/CardViewShapeAppearance</item>

    </style>

    <style name="Theme.Splash" parent="Base.Theme.NasaApp">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.NasaAppRed" parent="Base.Theme.NasaApp" >
        <item name="android:name">Theme Red</item>
        <item name="colorPrimary">@color/primary_theme_red</item>
        <item name="colorPrimaryContainer">@color/primary_container_theme_red</item>
        <item name="colorOnContainerNasaApp">@color/on_container_theme_red</item>
        <item name="colorSecondary">@color/secondary_theme_red</item>
        <item name="colorSecondaryContainer">@color/secondary_container_theme_red</item>
        <item name="colorSurface">@color/surface_theme_red</item>
        <item name="textAppearanceLabelLarge">@style/TextStyleRoboto</item>

        <item name="tabStyle">@style/TabStyle</item>

    </style>

    <style name="Theme.NasaAppBlue" parent="Base.Theme.NasaApp" >
        <item name="android:name">Theme Blue</item>
        <item name="colorPrimary">@color/primary_theme_blue</item>
        <item name="colorPrimaryContainer">@color/primary_container_theme_blue</item>
        <item name="colorOnContainerNasaApp">@color/on_container_theme_blue</item>
        <item name="colorSecondary">@color/secondary_theme_blue</item>
        <item name="colorSecondaryContainer">@color/secondary_container_theme_blue</item>
        <item name="colorSurface">@color/surface_theme_blue</item>
        <item name="textAppearanceLabelLarge">@style/TextStyleAmethysta</item>
    </style>

    <style name="Theme.NasaAppOrange" parent="Base.Theme.NasaApp" >
        <item name="android:name">Theme Orange</item>
        <item name="colorPrimary">@color/primary_theme_orange</item>
        <item name="colorPrimaryContainer">@color/primary_container_theme_orange</item>
       <item name="colorOnContainerNasaApp">@color/on_container_theme_orange</item>
        <item name="colorSecondary">@color/secondary_theme_orange</item>
        <item name="colorSecondaryContainer">@color/secondary_container_theme_orange</item>
        <item name="colorSurface">@color/surface_theme_orange</item>
        <item name="textAppearanceLabelLarge">@style/TextStyleTelex</item>
    </style>

</resources>